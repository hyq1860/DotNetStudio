@using DotNet.CloudFarm.Domain.Model;
@using DotNet.CloudFarm.Domain.Model.Order
@using DotNet.CloudFarm.Domain.Model.User
@using DotNet.Common
@{
    Layout = "~/Views/Shared/_LayoutSendGift.cshtml";
    ViewBag.Title = "红包分享";
    //订单信息
    OrderModel orderModel = ViewBag.Order??new OrderModel();
    
    //赠送人信息
    UserModel SendUserInfo = ViewBag.SendUserInfo ?? new UserModel();
}

<div class="layout layout_giftShare">
    <section class="giftshare_head">
        <img class="giftshare_headbg" src="/images/giftshare_top.png" alt="">
        <img src="@SendUserInfo.WxHeadUrl" alt="图片头像" class="giftshare_headpic">
    </section>
    <section class="giftshare_name">@SendUserInfo.WxNickName（@SendUserInfo.Mobile.HideMiddle(3,4)）</section>
    <section class="giftshare_info">
        <span>@string.Format("在羊客送你了{0}只小羊", orderModel.ProductCount)</span>
        <span class="gift_price">总价值￥<strong>@(orderModel.ProductCount * orderModel.Price)</strong></span>
    </section>
    <section class="giftshare_txt">
        @orderModel.SendRemark
    </section>
    <section class="giftshare_btn"><a href="@Url.Action("GiftList", "Home", new {tab = 3})">查看收到的红包</a></section>
    <section class="giftshare_bt"><img src="/images/giftshare_bt.jpg" alt=""></section>
</div>

